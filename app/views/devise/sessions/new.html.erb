<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="content">
<h2 class="h1-text">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
   <%= f.label :login  ,class: "text-2" %>
    <%= f.email_field :login, autofocus: true,class: "text" %>                                                                                                  
  </div>

  <div class="field">
    <%= f.label :password  ,class: "text-2" %>
    <%= f.password_field :password, autocomplete: "current-password",class: "text" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me  ,class: "text-2" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
<%= f.submit "Log in", data: {turbo: false} ,class: "submit" %>  </div>
<br>
<% end %>

<%= render "devise/shared/links" %>
<br>
</div>